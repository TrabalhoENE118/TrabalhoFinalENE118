                valign: "middle"
                padding: 8,8,8,8
            Label:
                text: "P:"
                font_size: 14
            TextInput:
                id: defineP
                font_size: 14
                text: "8.0"
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8   
            Label:
                text: "I:"
                font_size: 14
            TextInput: 
                id: defineI
                font_size: 14
                text: "5.0"
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
            Label:
                text: "D:"
                font_size: 14
            TextInput:
                id: defineD
                font_size: 14
                text: "2.0"
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
