#:kivy 1.11.1

<ModbusPopup>:
    title:"Conexão Socket"
    size_hint_y: None
    size_hint_x: 0.4
    height: 200
    BoxLayout:
        id: layout 
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows:2
            Label:
                text: "IP"
                font_size: 14
            TextInput:
                id: txt_ip
                text: "localhost"
                font_size: 14
                haligh: "center"
                valign: "middle"
            
            Label:
                text: "Porta"
                font_size: 14
            TextInput:
                id: txt_port
                text: "502"
                font_size: 14
                haligh: "center"
                valign: "middle"
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 30
                text: "Conectar"
                on_release:
                    root.clearInfo()
                    app.root.startDataRead(txt_ip.text, int(txt_port.text))
            Button:
                size_hint_y: None
                height: 30
                text: "Fechar"
                on_release: root.dismiss()

<ScanPopup>:
    title:"Configuração do Scantime"
    size_hint_y: None
    size_hint_x: 0.4
    height: 150
    BoxLayout:
        id: layout 
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows:1
            Label:
                text: "Tempo de atualização[ms]"
                font_size: 14
            TextInput:
                id: txt_st
                font_size: 14
                haligh: "center"
                valign: "middle"
                padding: 10,10,10,10
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 30
                text: "Configurar"
                on_release:
                    app.root._scan_time = int(txt_st.text)

            Button:
                size_hint_y: None
                height: 30
                text: "Fechar"
                on_release: root.dismiss()
<PidPopup>:
    title:"Configuração e dados do PID"
    size_hint_y: None
    size_hint_x: 0.8
    height: 500
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows: 2
            Label: 
                text: "PV"
                font_size: 14
            Label:
                id: cargaPV
                text: '-.- Kgf/cm²'
                font_size: 14
                haligh: "center"
                valign: "middle"
            
            Label:
