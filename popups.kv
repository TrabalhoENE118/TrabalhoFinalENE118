#:kivy 1.11.1

<ModbusPopup>:
    title:"Conexão Socket"
    size_hint_y: None
    size_hint_x: 0.4
    height: 200
    BoxLayout:
        id: layout 
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows:2
            Label:
                text: "IP"
                font_size: 14
            TextInput:
                id: txt_ip
                text: "localhost"
                font_size: 14
                haligh: "center"
                valign: "middle"
            
            Label:
                text: "Porta"
                font_size: 14
            TextInput:
                id: txt_port
                text: "502"
                font_size: 14
                haligh: "center"
                valign: "middle"
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 30
                text: "Conectar"
                on_release:
                    root.clearInfo()
                    app.root.startDataRead(txt_ip.text, int(txt_port.text))
            Button:
                size_hint_y: None
                height: 30
                text: "Fechar"
                on_release: root.dismiss()

<ScanPopup>:
    title:"Configuração do Scantime"
    size_hint_y: None
    size_hint_x: 0.4
    height: 150
    BoxLayout:
        id: layout 
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows:1
            Label:
                text: "Scantime[ms]"
                font_size: 14
            TextInput:
                id: txt_st
                font_size: 14
    
                haligh: "center"
                valign: "middle"
                padding: 10,10,10,10
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 30
                text: "Configurar"
                on_release:
                    app.root._scan_time = int(txt_st.text)

            Button:
                size_hint_y: None
                height: 30
                text: "Fechar"
                on_release: root.dismiss()
<PidPopup>:
    title:"Configuração e dados do PID"
    size_hint_y: None
    size_hint_x: 0.8
    height: 600
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows: 5
            Label: 
                text: "PV"
                font_size: 14
            Label:
                id: cargaPV
                text: '-.- Kgf/cm²'
                font_size: 14
                haligh: "center"
                valign: "middle"
            
            Label:
                text: 'Status do PID'
                font_size: 14
            Label:
                id: statusPID
                text: 'Desligado'
                font_size: 14
                haligh: "center"
                valign: "middle"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Modo de operação:"
                font_size: 14
            GridLayout:
                cols: 2
                rows:2
                CheckBox:
                    id: AutomaticoOn
                    text: "Automático"
                    size: 50, 10
                    group: "Aut/Man"
                    active: True
                Label:
                    text:"Automático"
                CheckBox:
                    id: ManualOn
                    text: "Manual"
                    size: 50, 10
                    group: "Aut/Man"
                    active: False
                Label:
                    text:"Manual"
        GridLayout:
            cols: 2
            rows:5
            Label:
                text: "Defina o Setpoint(SP):"
                font_size: 14
            TextInput:
                id: defineSetpoint
                font_size: 14
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
            Label:
                text: "MV (%):"
                font_size: 14
            TextInput:
                id: defineMV
                font_size: 14
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
            Label:
                text: "P:"
                font_size: 14
            TextInput:
                id: defineP
                font_size: 14
                text: "8.0"
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8   
            Label:
                text: "I:"
                font_size: 14
            TextInput: 
                id: defineI
                font_size: 14
                text: "5.0"
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
            Label:
                text: "D:"
                font_size: 14
            TextInput:
                id: defineD
                font_size: 14
                text: "2.0"
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
<MedicoesPopup>:
    title:"Medições de variáveis elétricas"
    size_hint_y: None
    size_hint_x: 0.8
    height: 500
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows: 5
            Label:
                text: "Corrente Média"
                font_size: 14
            Label:
                id: correnteMedia
                text: '-.- A'
                font_size: 14
                haligh: "center"
                valign: "middle"
                
            Label: 
                text: "Potência ativa total"
                font_size: 14
            Label:
                id: potAtivaTotal
                text: '-.- W'
                font_size: 14
                haligh: "center"
                valign: "middle"
            Label:
                text: "Frequência da rede"
                font_size: 14
            Label:
                id: frequencia
                text: '-.- Hz'
                font_size: 14
                haligh: "center"
                valign: "middle"
       
            Label:
                text: "Fator de Potência Total"
                font_size: 14
            Label:
                id: fpTotal
                text: '-.-'
                font_size: 14
                haligh: "center"
                valign: "middle"
            Label:
                text: "Tensão entre as fases R e S"
                font_size: 14
            Label:
                id: tensaoRS
                text: '-.- V'
                font_size: 14
                haligh: "center"
                valign: "middle"
<ComandoPopup>:
    title:"Comandos do motor"
    separator_color: 0, 0, 0, 0
    size_hint_y: None
    size_hint_x: 0.95
    height: 350
    GridLayout:
        cols:3
        spacing: 10
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.3
        
            spacing:10
            Label:
                text: "Comandos na esteira"
                font_size: 14
            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
               
                text: "Ligar"
                color: 0, 0, 0, 1
                padding: 8,8,8,8
                height: 100
                on_release: root.setOperacao(1)
              
            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
               
                text: "Desligar"
                color: 0, 0, 0, 1
                padding: 8,8,8,8
                height: 100
                on_release: root.setOperacao(0)
 
            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
                text: "Reset"
                color: 0, 0, 0, 1
                padding: 8,8,8,8
                height: 100
                on_release: root.setOperacao(2)
           
        BoxLayout:
            orientation: "vertical"
            spacing:10
            size_hint_x: 0.3
            size_hint_y: 0.98
           
            Label: 
                text: "Tipo de partida"
                font_size: 14
            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
                text: "Partida Direta"
                color: 0, 0, 0, 1
                height: 100
                on_release: root.setPartida('Direta')
      
            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
                text: "Partida pelo Inversor"
                color: 0, 0, 0, 1
                height: 100
                on_release: root.setPartida('Inversor')
         
            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
                text: "Partida Soft-Start"
                color: 0, 0, 0, 1
                height: 100
                on_release: root.setPartida('Soft-Start')
        BoxLayout:
            orientation: "vertical"
            spacing:10
            size_hint_x: 0.3
            size_hint_y: 0.98

            
            Label:
                text: "Comandos do inversor"
                font_size: 14
                size_hint_y: 0.025
            BoxLayout:
                orientation: "horizontal"
                size_hint_X:0.75
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text:"Inversor"
                    GridLayout:
                        cols:2
                        rows:2
                        Label:
                            text: "Acel.(s)"
                        TextInput:
                            id: defineaccInversor
                            font_size: 14
                            text: "10"
                            haligh: "center"
                            valign: "middle"
                            padding: 8,8,8,8
                        Label:
                            text: "Desacel.(s)"
                        TextInput:
                            id: definedccInversor
                            font_size: 14
                            text: "10"
                            haligh: "center"
                            valign: "middle"
                            padding: 8,8,8,8
                    BoxLayout:
                        orientation: "vertical"
                        Label:
                            text:"Aceleração"
                            bold: True
                        Label:
                            text:"e desaceleração"
                            bold: True
                        Label:
                            haligh: "center"
                            text:"      Min: 10s Max: 60s"
                            
                    BoxLayout:
                        orientation: "vertical"
                        Label:
                            text:"Velocidade(0 a 60Hz)"
                            bold: True
                        TextInput:
                            id: definevelInversor
                            font_size: 14
                            text: "60"
                            haligh: "center"
                            valign: "middle"
                            padding: 8,8,8,8
                
                

                Slider:
                    id: sliderInversor
                    min: 0
                    max: 60
                    value: 0
                    step: 1
                    on_touch_move:
                        root._velInversor[0]=sliderInversor.value
                    orientation: 'vertical'

       
      
     